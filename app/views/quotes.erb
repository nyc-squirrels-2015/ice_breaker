<!-- <h1><%=@subcategory_name%></h1> -->
<form class="form-horizontal" role="form" method="GET" action="/categories/<%=@category_id%>/subcategories/<%=@subcategory_id%>/quotes/new">
  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default new">Create New Quote</button>
    </div>
  </div>
</form>

<div class="list-group">

<!-- ZM: For a loop this big, look into rendering a partial, and sending it in locals -->
<!-- THERE IS Wayyyyyyyyyy to much pgoing on here to not be broken out  -->

  <% @quotes.each do |quote| %>
  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%=quote.user.name%></h4>
    <p class="list-group-item-text"><%=quote.text%></p>
    <%if current_user!=nil && current_user.id == quote.user.id %>
      <form class="form-horizontal edit_delete" role="form"
          method="GET" action="/categories/<%=quote.subcategory.category.id%>/subcategories/<%=quote.subcategory.id%>/quotes/<%=quote.id%>/update">

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Edit</button>
        </div>
      </div>
    </form>

    <form class="form-horizontal edit_delete" role="form"
          method="POST" action="/categories/<%=quote.subcategory.category.id%>/subcategories/<%=quote.subcategory.id%>/quotes/<%=quote.id%>/delete">

      <div class="form-group">
        <input type="hidden" name="_method" value="DELETE">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Delete</button>
        </div>
      </div>
    </form>
    <%end %>
  </div>
  <%end%>
</div>
