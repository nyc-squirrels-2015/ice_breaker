
<div class="list-group categories_subcategories">

  <h1><%=@category_name%></h1>

  <!-- ZM: For a loop this big, look into rendering a partial, and sending it in locals -->
  
  <%@subcategories.each do |subcategory|%>

        <div class="list-group-item active">
          <h4 class="list-group-item-heading"><a href="/categories/<%=@category_id%>/subcategories/<%=subcategory.id%>/quotes">
            <span class="white_text"><%=subcategory.name%></span></a>
          </h4>
        </div>


  <%end%><!-- end categories loop-->
</div>
